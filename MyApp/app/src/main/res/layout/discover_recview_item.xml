<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="3dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/discover_article_user_header"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/img_111"/>
            <TextView
                android:id="@+id/discover_article_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="子若不离"
                android:layout_margin="2dp"
                android:textColor="@color/blue"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/discover_article_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:text="昨天"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/discover_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:text="8款app，管理时间和知识的好帮手"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            >
           <ImageView
               android:id="@+id/discover_article_type"
               android:layout_width="20dp"
               android:layout_height="15dp"
               android:layout_margin="2dp"
               android:background="@drawable/icon_write"
                />
            <TextView
                android:id="@+id/discover_article_readcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="阅读6293*评论68*喜欢645"
                android:textSize="15dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/discover_article_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/pp1"
        android:scaleType="fitXY"
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

</LinearLayout>
