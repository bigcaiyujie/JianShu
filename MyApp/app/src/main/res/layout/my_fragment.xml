<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />


    <RelativeLayout
        android:id="@+id/wodetouxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_111"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/myfragment_username"
                style="@style/my_sec_text"
                android:text="android_cai" />
        </LinearLayout>

        <ImageView
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myinfor_openarticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_gongkaiwz" />

            <TextView
                style="@style/my_sec_text"
                android:text="公开文章" />
        </LinearLayout>

        <TextView
            android:id="@+id/myfragment_open_count"
            style="@style/my_count_style"
            android:layout_toLeftOf="@+id/aa"
            android:text="" />

        <ImageView
            android:id="@+id/aa"
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myfragment_secert_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_simiwz" />

            <TextView
                style="@style/my_sec_text"
                android:text="私密文章" />
        </LinearLayout>

        <TextView
            android:id="@+id/myfragment_secret_count"
            style="@style/my_count_style"
            android:layout_toLeftOf="@+id/aa1"
            android:text="" />

        <ImageView
            android:id="@+id/aa1"
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myfragment_concern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_wodesc" />

            <TextView
                style="@style/my_sec_text"
                android:text="我的关注" />
        </LinearLayout>

        <TextView
            android:id="@+id/concern_count"
            style="@style/my_count_style"
            android:layout_toLeftOf="@+id/aa2"
            android:text="3" />

        <ImageView
            android:id="@+id/aa2"
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myfragment_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_like" />

            <TextView
                style="@style/my_sec_text"
                android:text="喜欢的文章" />
        </LinearLayout>

        <TextView
            android:id="@+id/myfragment_like_count"
            style="@style/my_count_style"
            android:layout_toLeftOf="@+id/aa3"
            android:text="3" />

        <ImageView
            android:id="@+id/aa3"
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myfragment_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_like" />

            <TextView
                style="@style/my_sec_text"
                android:text="我的收藏" />
        </LinearLayout>

        <TextView
            android:id="@+id/myfragment_collect_count"
            style="@style/my_count_style"
            android:layout_toLeftOf="@+id/aa4"
            android:text="3" />

        <ImageView
            android:id="@+id/aa4"
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myfragment_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_liulanls" />

            <TextView
                style="@style/my_sec_text"
                android:text="浏览历史" />
        </LinearLayout>

        <ImageView
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/myfragment_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myfragment_bacl"
        android:clickable="true">

        <LinearLayout style="@style/my_linearlayout">

            <ImageView
                style="@style/my_sec_img"
                android:background="@drawable/icon_yijianfk" />

            <TextView
                style="@style/my_sec_text"
                android:text="意见反馈" />
        </LinearLayout>

        <ImageView
            style="@style/my_img_next"
            android:background="@drawable/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />


</LinearLayout>
